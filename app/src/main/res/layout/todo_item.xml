<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_background_with_border"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    >

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/card_background_with_border"
     >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
       >

      <TextView
          android:id="@+id/todo_number"
          android:layout_width="35px"
          android:layout_height="50px"
          android:fontFamily="@font/poppins_semibold">

      </TextView>

      <CheckBox
          android:id="@+id/todo_checkbox_main"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/todo_text_main"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@android:color/transparent"
          android:clickable="true"
          android:maxLines="10"
          android:minHeight="48dp"
          android:paddingStart="8dp"
          android:paddingBottom="8dp"
          android:text="PrzykÅ‚adowe zadanie"
          android:textColor="@color/my_black"
          android:textSize="16sp"
          android:fontFamily="@font/poppins_semibold"
          />

      <ImageButton
          android:id="@+id/moreButton_main"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:background="@drawable/button_background"
          android:contentDescription="Opcje"
          android:src="@drawable/ic_more_vert_24dp"
         ></ImageButton>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subtask_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />
  </LinearLayout>
</androidx.cardview.widget.CardView>